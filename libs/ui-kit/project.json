{
  "name": "ui-kit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-kit/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/libs/ui-kit"],
      "options": {
        "project": "libs/ui-kit/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ui-kit/tsconfig.lib.json"
        },
        "development": {
          "tsConfig": "libs/ui-kit/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd dist/libs/ui-kit && npm publish --registry=https://tu-servidor-nexus.com/repository/npm-hosted/"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/ui-kit/.storybook",
        "browserTarget": "ui-kit:build-storybook",
        "compodoc": false,
        "styles": ["libs/ui-kit/.storybook/storybook-styles.scss"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/ui-kit",
        "configDir": "libs/ui-kit/.storybook",
        "browserTarget": "ui-kit:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/ui-kit/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build-storybook"],
      "options": {
        "buildTarget": "ui-kit:build-storybook",
        "staticFilePath": "dist/storybook/ui-kit",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "ui-kit:build-storybook:ci"
        }
      }
    }
  }
}